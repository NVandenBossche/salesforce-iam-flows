                    "type": "sync",
                    "method": "POST",
                    "endpoint": {
                        "name": "Token",
                        "url": "/services/oauth2/token"
                    },
                    "input": ["grant_type", "client_id", "client_secret", "username", "password"],
                    "validation": true,
                    "output": ["token_type", "instance_url", "access_token"]
