    {
        "name": "device",
        "title": "Device Authentication Flow",
        "protocol": "OAuth 2.0",
        "image": "https://cloudsundial.com/sites/default/files/2020-05/Device%20Authentication%203000.png",
        "configuration": {
            "response_type": "device_code",
            "token_type": "Bearer",
