                    "input": ["grant_type", "client_id", "client_secret", "redirect_uri", "code", "code_verifier"],
                    "validation": true,
                    "output": ["token_type", "instance_url", "access_token", "refresh_token"]
                }
            ],
            "query": true,
            "attacks": ["accesscontrol", "csrf", "impersonationsecret", "codeinterception"]
        }
    },
